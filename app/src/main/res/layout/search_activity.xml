<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/symbols_activity_list_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<TextView
			android:layout_height="wrap_content"
			android:text="@string/search"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="match_parent"/>

		<EditText
			android:layout_height="wrap_content"
			android:ems="10"
			android:layout_width="match_parent"
			android:id="@+id/searchactivityEditText"
			android:singleLine="true"
			android:lines="1"/>

		<CheckBox
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="@string/usePattern"
			android:id="@+id/searchactivityCheckBoxUsePattern"/>

		<ListView
			android:id="@+id/search_activity_list_view"
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:fastScrollEnabled="true"/>

	</LinearLayout>

	<com.gc.materialdesign.views.ButtonFloat
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_marginRight="30dp"
		android:background="#FF1A73E8"
		materialdesign:iconDrawable="@drawable/ic_action_search"
		android:layout_marginBottom="30dp"
		android:onClick="search"/>

</RelativeLayout>

